SRCS		= mlx_window.c
HEADER		= -I includes
RM			= rm -rf
NAME		= miniRT
CC			= gcc
OBJECTS		= ${SRCS:.c=.o}
CFLAGS		= -Wall -Werror -Wextra 
#MLX			= -Lmlx -lmlx -framework OpenGL -framework AppKit

#${NAME}:	${HEAD} ${OBJECTS}
#	${CC} ${CFLAGS} ${MLX} -o ${NAME} ${OBJECTS} -fsanitize=address

LIB		=	-L ./Libft -L ./minilibx-linux -lmlx_Linux -lXext -lX11

$(NAME)	:	${OBJECTS}
#			make -C minilibx-linux
			$(CC) ${CFLAGS} -Imlx_linux -Lmlx_linux -lmlx_Linux -L/usr/lib -lXext -lX11 -lm -lz -o $(NAME) ${OBJECTS}

#${NAME}: ${HEAD} ${OBJECTS}
#	$(CC) ${CFLAGS} -Lmlx_linux -lmlx_Linux -L/usr/lib -Imlx_linux -lXext -lX11 -lm -lz -o ${NAME} ${OBJECTS}

all:		${NAME}

%.o: %.c
	$(CC) -Wall -Wextra -Werror -I/usr/include -Iminilibx -O3  -c $< -o $@

#%.o: %.c %.h
#	$(CC) $(CFLAGS) -Imlx -c $< -o $@

#%.o: %.c %.h
#	$(CC) $(CFLAGS) -I/usr/include -Imlx_linux -O3 -c $< -o $@

clean:
	${RM} ${OBJECTS}

fclean:
	${RM} ${OBJECTS}
	${RM} ${NAME}
#	make -C minilibx-linux clean

re:			fclean all

.PHONY:		all clean fclean re